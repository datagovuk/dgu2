<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="error-summary">
      <h1 class="heading-medium error-summary-heading">
        <%= gettext "Oops, something went wrong! Please check the errors below." %>
      </h1>
    </div>
  <% end %>

  <input type="hidden" name="dataset[publisher_id]" value="<%= @publisher.id %>"/>
  <input type="hidden" name="upload" value="<%= @upload %>"/>


  <div class="form-group">
    <label class="form-label">Name</label>
    <p class="form-hint">
        Please pretend you didn't see this, will be removed soon
    </p>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>



  <div class="form-group">
    <label class="form-label"><%= gettext "Title" %></label>
    <p class="form-hint">
        <%= gettext "Titles should be 65 characters or less, including spaces." %><br/>
        <%= gettext "Most search engines will shorten titles if theyâ€™re longer than this." %>
    </p>
    <%= text_input f, :title, class: "form-control" %>
    <%= error_tag f, :title %>
  </div>

  <div class="form-group">
    <label class="form-label">Description</label>
    <p class="form-hint">
      <%= gettext "A description of what the data contained is this dataset is." %><br/>
      <%= gettext "The more detail you give in this field, the easier it will be" %><br/>
      <%= gettext "for users to work out if this is the data they want." %>
    </p>
    <%= textarea f, :description, class: "form-control", rows: 10 %>
    <%= error_tag f, :description %>
  </div>


  <div class="form-group">
    <%= submit gettext("Submit"), class: "button" %>
  </div>
<% end %>
