
<h1 class="heading-xlarge">My publishers</h1>

<%= if @publishers == [] do %>
    <p>You are not a member of any publisher</p>
<% end %>

<ul>
<%= for {name, m} <- @publishers do %>
    <li>
    <%= link m.title, to: publisher_path(@conn, :show, name) %>
    (<%= m.role %>)
    </li>
<% end %>
</ul>